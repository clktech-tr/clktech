{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/server",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["es2020"],
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["server/**/*", "shared/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "client"]
}